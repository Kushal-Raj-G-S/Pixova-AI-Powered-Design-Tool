# ===========================================
# Pixova AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME="Pixova AI Design API"
APP_VERSION="2.0.0"
ENVIRONMENT=development  # development | staging | production
DEBUG=false

# ===========================================
# SERVER
# ===========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ===========================================
# A4F API (REQUIRED)
# ===========================================
A4F_API_KEY=ddc-a4f-14c01485bbe2434b9af5ac99a60fd3b1
A4F_BASE_URL=https://api.a4f.co/v1
API_TIMEOUT=120

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # seconds

# ===========================================
# CORS
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# GENERATION DEFAULTS
# ===========================================
DEFAULT_WIDTH=1024
DEFAULT_HEIGHT=1024
MAX_WIDTH=2048
MAX_HEIGHT=2048
MAX_PROMPT_LENGTH=2000

# ===========================================
# RETRY CONFIGURATION
# ===========================================
MAX_RETRIES_PER_MODEL=2
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=10.0

# ===========================================
# MODEL CONFIGURATION
# ===========================================
PRIMARY_MODEL=provider-5/flux-fast

# Comma-separated list (no spaces)
FALLBACK_MODELS=provider-4/flux-schnell,provider-4/imagen-4,provider-4/imagen-3.5,provider-4/qwen-image,provider-5/dall-e-2,provider-5/imagen-4-fast

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=text  # json | text

